{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#app": [
        "node_modules/@nuxt/bridge/dist/runtime/index"
      ],
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/http",
      "@nuxt/types-edge",
      "@nuxtjs/axios",
      "@nuxtjs/i18n",
      "@nuxtjs/moment",
      "@types/node",
      "twix",
      "vue-apollo/types",
      "vue-clipboard2",
      "vue-sweetalert2",
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "importHelpers": true, // https://championswimmer.in/vuex-module-decorators/pages/installation.html#typescript
  "extends": "./.nuxt/tsconfig.json"
}
